# RankLLM Service Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=RankLLM Service
API_VERSION=1.0.0

# Model Configuration
DEFAULT_MODEL=monot5
RANKLLM_MODEL_DIR=/app/models
RANKLLM_CACHE_DIR=/app/cache

# Performance Settings
MAX_DOCUMENTS=100
MAX_QUERY_LENGTH=512
MAX_DOCUMENT_LENGTH=1024
TIMEOUT_SECONDS=300

# Logging
LOG_LEVEL=INFO

# Production Settings (for deployment)
# Uncomment and configure for production
# RANKLLM_SERVICE_URL=https://your-domain.com
# ENABLE_GPU=true
# MODEL_CACHE_SIZE=2
# MAX_CONCURRENT_REQUESTS=10
